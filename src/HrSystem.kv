<HomeScreen>:
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            orientation: 'horizontal'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Employees'
                    size_hint_y: 0.1
                RecycleView:
                    viewclass: "Button"
                    data:root.current_emps
                    RecycleBoxLayout:
                        orientation:'vertical'
                        height: self.minimum_height
                        default_size_hint: 1, None
                        size_hint_y: None
                Label:
                    size_hint_y: 0.1
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Project'
                    size_hint_y: 0.1
                RecycleView:
                    viewclass: "Button"
                    data:root.current_projects
                    RecycleBoxLayout:
                        orientation:'vertical'
                        height: self.minimum_height
                        default_size_hint: 1, None
                        size_hint_y: None
                Label:
                    size_hint_y: 0.1
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text: 'Aplicants'
                    size_hint_y: 0.1
                RecycleView:
                    viewclass: "Button"
                    data:root.current_emps
                    RecycleBoxLayout:
                        orientation:'vertical'
                        height: self.minimum_height
                        default_size_hint: 1, None
                        size_hint_y: None
                Label:
                    size_hint_y: 0.1
        BoxLayout:
            size_hint_y: 0.3
            rientation: 'horizontal'
            BoxLayout:
                orienation: 'vertical'
                Label:
                    text: 'Project edit'
                    size_hint_x:0.2
                BoxLayout:
                    orientation: 'horizontal'
                    BoxLayout:
                        orientation:'vertical'
                        Label:
                            text: 'ID'
                        TextInput:

                    BoxLayout:
                        orientation:'vertical'
                        Label:
                            text: 'Minimum Employee Number'
                        TextInput:

                    BoxLayout:
                        orientation:'vertical'
                        Label:
                            text: 'Maximum Employee Number'
                        TextInput:
                    BoxLayout:
                        size_hint_x:0.1
            GridLayout:
                cols:3
                Button:
                    text: "New project"
                Button:
                    text: "Start project"
                Button:
                    text: "End project"
                Button:
                    text: "Hire employee"
                Button:
                    text: "Fire employee"
                Button:
                    text: "Assign to Project"
