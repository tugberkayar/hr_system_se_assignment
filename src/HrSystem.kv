<HomeScreen>:
    BoxLayout:
        orientation:'vertical'
        BoxLayout:
            orientation:'horizontal'
            BoxLayout:
                orientation : 'vertical'
                Label:
                    text: 'Aplicants'
                    size_hint_y: 0.1
                Spinner:
                    size_hint_y: 0.1
                    id: applicants
                    text: "Choose an applicant"
                    on_text:root.applicant_spinner_select()
                Spinner:
                    text : "Choose an accounting type"
                    values : ["Default", "Webservice"]
                    id : accounting_type_spinner
                    size_hint_y : 0.1
                Label:
                    id:applicant_info
                    size_hint_y: 0.8
            BoxLayout:
                orientation : 'vertical'
                Label:
                    text: 'Projects'
                    size_hint_y: 0.1
                Spinner:
                    size_hint_y: 0.1
                    id: projects
                    text: "Choose a project"
                    on_text:root.project_spinner_select()
                Label:
                    id:project_info
                    size_hint_y: 0.8
            BoxLayout:
                orientation : 'vertical'
                Label:
                    text: 'Employees'
                    size_hint_y: 0.1
                Spinner:
                    size_hint_y: 0.1
                    id: employees
                    text: "Choose an employee"
                    on_text:root.employee_spinner_select()
                Label:
                    id:employee_info
                    size_hint_y: 0.8
        BoxLayout:
            size_hint_y: 0.3
            rientation: 'horizontal'
            BoxLayout:
                orienation: 'vertical'
                Label:
                    text: 'Project edit'
                    size_hint_x:0.2
                BoxLayout:
                    orientation: 'horizontal'
                    BoxLayout:
                        orientation:'vertical'
                        Label:
                            text: 'ID'
                        TextInput:
                    BoxLayout:
                        orientation:'vertical'
                        Label:
                            text: 'Minimum Employee Number'
                        TextInput:
                    BoxLayout:
                        orientation:'vertical'
                        Label:
                            text: 'Maximum Employee Number'
                        TextInput:
                    BoxLayout:
                        size_hint_x:0.1
            GridLayout:
                cols:3
                Button:
                    text: "New project"
                    on_press:root.new_project_on_click()
                Button:
                    text: "Start project"
                    on_press:root.start_project_on_click()
                Button:
                    text: "End project"
                    on_press:root.end_project_on_click()
                Button:
                    text: "Hire employee"
                    on_press: root.hire_button_on_click()
                Button:
                    text: "Fire employee"
                    on_press:root.fire_employee_on_click()
                Button:
                    text: "Assign to Project"
                    on_press:root.assign_to_project_on_click()
